@using App.Models;
@model AdminModel
@if (true)
{
    string min = "";
    for(int i = 0; i < 10; i++)
    {
        min += DateTime.UtcNow.Date.ToString()[i];
    }
}
<div id="AdminPageContent">
    <button onclick="AdminChangeWindowNameSpace.MealClick();">Posiłek</button><button onclick="AdminChangeWindowNameSpace.MealDayClick();">Dieta</button><br/><br />
    <div>
        <div id="meal">
            <form method="post" asp-controller="Home" id="1" name="1">
                <textarea required asp-for="AddMeal"></textarea><br /><br />
                <input type="submit" asp-action="AddMeal"/>
            </form>
        </div>
        <div id="diet">
            <form method="post" asp-controller="Home" id="2" name="2">
                <input type="date" 
                       min="@if (true)
                       {
                           string min = "";
                           for (int i = 0; i < 10; i++)
                           {
                               min += DateTime.UtcNow.Date.ToString()[i];
                           }
                           @min;}" 
                       maxlength="10" placeholder="rrrr-mm-dd" pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" asp-for="Date"/><br /><br />
                <select asp-for="Meal">
                    @foreach(var item in Model.Meals)
                    {
                        <option value="@item.Key">@item.Value</option>
                    }
                </select><br /><br />
                <input type="submit" asp-action="AddDiet"/>
            </form>
        </div>
    </div>
</div>